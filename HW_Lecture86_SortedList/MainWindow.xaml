<Window x:Class="HW_Lecture86_SortedList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_Lecture86_SortedList"
        mc:Ignorable="d"
        Title="MainWindow" Height="222" Width="399">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="535*"/>
            <ColumnDefinition Width="66*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lb_Id" Content="ID" HorizontalAlignment="Left" Margin="35,25,0,0" VerticalAlignment="Top" Width="35"/>
        <Label x:Name="lb_Name" Content="Name" HorizontalAlignment="Left" Margin="35,58,0,0" VerticalAlignment="Top" RenderTransformOrigin="-10.395,-1.538" Height="25"/>
        <TextBox x:Name="tb_Id" HorizontalAlignment="Left" Height="23" Margin="85,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="tb_name" HorizontalAlignment="Left" Height="23" Margin="85,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Button x:Name="bt_add" Content="Add" HorizontalAlignment="Left" Margin="235,30,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-2.8,-2.25" Height="50" Click="bt_add_Click"/>

    </Grid>
</Window>
